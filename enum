module Enumerable
  def my_each
    counter = 0
    until counter == self.length
      yield self[counter]
      counter += 1
    end
    return self
  end
  
  def my_each_with_index
    counter = 0
    until counter == self.length
      yield self[counter],counter
      counter += 1
    end
    self
  end
  
  
  def my_select
  returning_array = []
    self.my_each do |value|
      returning_array << value if yield(value)
    end
  return returning_array
  end
  
  
end


puts [1,2,3,4,5,6,7,8,9].my_select {|num| num % 2 == 0}